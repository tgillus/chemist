{
  "name": "@triviumsoftware/chemist",
  "type": "module",
  "version": "2.0.5",
  "description": "Chemist is a packager that bundles source code within a standard Node.js project into a compressed file.",
  "author": "Tramaine L. Gillus",
  "repository": {
    "type": "git",
    "url": "git@github.com:tgillus/chemist.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.16"
  },
  "bin": {
    "chemist": "./lib/cli/cli.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "build",
    "build-tool",
    "bundler",
    "compression",
    "package",
    "packager",
    "packaging",
    "zip"
  ],
  "scripts": {
    "barrels": "barrelsby -c barrelsby.json && npm run format && replace-in-files --regex=$'(export * from \\'.+)?\\';\\n' --replacement=$'$1.js\\';\\n' ./src/index.ts",
    "build": "npm run clean && npm run barrels && npm test && tsc",
    "build:ci": "npm run clean && npm test && tsc",
    "clean": "del ./lib ./coverage",
    "format": "prettier . --write",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "prepack": "npm run build",
    "prepare": "husky install",
    "release": "release-it --ci",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "watch": "tsc -c"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@faker-js/faker": "7.6.0",
    "@release-it/conventional-changelog": "5.1.1",
    "@types/archiver": "5.3.1",
    "@types/node": "18.11.15",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@vitest/coverage-c8": "0.25.8",
    "barrelsby": "2.5.1",
    "del-cli": "5.0.0",
    "eslint": "8.29.0",
    "fishery": "2.2.2",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "pretty-format": "29.3.1",
    "release-it": "15.5.1",
    "replace-in-files-cli": "2.0.0",
    "testdouble": "3.16.8",
    "tsx": "3.12.1",
    "typescript": "4.9.4",
    "vitest": "0.25.8"
  },
  "dependencies": {
    "@sindresorhus/is": "5.3.0",
    "archiver": "5.3.1",
    "boxen": "7.0.0",
    "chalk": "5.2.0",
    "commander": "9.4.1",
    "cosmiconfig": "8.0.0",
    "del": "7.0.0",
    "execa": "6.1.0",
    "listr2": "5.0.6",
    "make-dir": "3.1.0",
    "pkg-dir": "7.0.0",
    "read-pkg-up": "9.1.0"
  }
}

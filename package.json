{
  "name": "@triviumsoftware/chemist",
  "type": "module",
  "version": "2.0.5",
  "description": "Chemist is a packager that bundles source code within a standard Node.js project into a compressed file.",
  "author": "Tramaine L. Gillus",
  "repository": {
    "type": "git",
    "url": "git@github.com:tgillus/chemist.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "npm": ">=10"
  },
  "bin": {
    "chemist": "./lib/cli/cli.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "build",
    "build-tool",
    "bundler",
    "compression",
    "package",
    "packager",
    "packaging",
    "zip"
  ],
  "scripts": {
    "barrels": "barrelsby -c barrelsby.json && npm run format && replace-in-files --regex=$'(export * from \\'.+)?\\';\\n' --replacement=$'$1.js\\';\\n' ./src/index.ts",
    "build": "npm run clean && npm run barrels && npm test && tsc",
    "build:ci": "npm run clean && npm test && tsc",
    "clean": "del-cli lib coverage",
    "format": "prettier . --write",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "prepack": "npm run build",
    "prepare": "husky",
    "release": "release-it --ci",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "watch": "tsc -c"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.17.0",
    "@faker-js/faker": "9.3.0",
    "@release-it/conventional-changelog": "9.0.4",
    "@types/archiver": "6.0.3",
    "@types/eslint__js": "8.42.3",
    "@types/node": "18.19.68",
    "@vitest/coverage-v8": "2.1.8",
    "barrelsby": "2.8.1",
    "del-cli": "6.0.0",
    "eslint": "9.17.0",
    "fishery": "2.2.2",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "pretty-format": "29.7.0",
    "release-it": "17.11.0",
    "replace-in-files-cli": "3.0.0",
    "testdouble": "3.20.2",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.2",
    "vitest": "2.1.8"
  },
  "dependencies": {
    "@sindresorhus/is": "7.0.1",
    "archiver": "7.0.1",
    "boxen": "8.0.1",
    "chalk": "5.4.1",
    "commander": "12.1.0",
    "cosmiconfig": "9.0.0",
    "del": "8.0.0",
    "execa": "9.5.2",
    "listr2": "8.2.5",
    "make-dir": "5.0.0",
    "pkg-dir": "8.0.0",
    "read-package-up": "11.0.0"
  }
}

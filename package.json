{
  "name": "@triviumsoftware/chemist",
  "type": "module",
  "version": "2.0.5",
  "description": "Chemist is a packager that bundles source code within a standard Node.js project into a compressed file.",
  "author": "Tramaine L. Gillus",
  "repository": {
    "type": "git",
    "url": "git@github.com:tgillus/chemist.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "chemist": "./lib/cli/cli.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "build",
    "build-tool",
    "bundler",
    "compression",
    "package",
    "packager",
    "packaging",
    "zip"
  ],
  "scripts": {
    "barrels": "barrelsby -c barrelsby.json && npm run format && replace-in-files --regex=$'(export * from \\'.+)?\\';\\n' --replacement=$'$1.js\\';\\n' ./src/index.ts",
    "build": "npm run clean && npm run barrels && npm test && tsc",
    "build:ci": "npm run clean && npm test && tsc",
    "clean": "del-cli lib coverage",
    "format": "prettier . --write",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "prepack": "npm run build",
    "prepare": "husky install",
    "release": "release-it --ci",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "watch": "tsc -c"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@faker-js/faker": "8.4.1",
    "@release-it/conventional-changelog": "8.0.1",
    "@types/archiver": "6.0.2",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "@vitest/coverage-v8": "1.5.0",
    "barrelsby": "2.8.1",
    "del-cli": "5.1.0",
    "eslint": "8.57.0",
    "fishery": "2.2.2",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "pretty-format": "29.7.0",
    "release-it": "17.1.1",
    "replace-in-files-cli": "2.2.0",
    "testdouble": "3.20.2",
    "tsx": "4.7.2",
    "typescript": "5.4.5",
    "vitest": "1.5.0"
  },
  "dependencies": {
    "@sindresorhus/is": "6.2.0",
    "archiver": "7.0.1",
    "boxen": "7.1.1",
    "chalk": "5.3.0",
    "commander": "12.0.0",
    "cosmiconfig": "9.0.0",
    "del": "7.1.0",
    "execa": "8.0.1",
    "listr2": "8.2.1",
    "make-dir": "4.0.0",
    "pkg-dir": "8.0.0",
    "read-pkg-up": "10.1.0"
  }
}
